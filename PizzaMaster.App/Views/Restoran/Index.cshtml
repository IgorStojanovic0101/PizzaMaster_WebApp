@model IEnumerable<PizzaMaster.Domain.ViewModels.RestoranViewModel>

@{
    ViewData["Title"] = "Restoran List";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Restoran List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped mt-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>Restoran Name</th>
                <th>Date From</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.RestoranIme</td>
                    <td>@item.DateFrom.ToShortDateString()</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" class="btn btn-success me-2" asp-route-id="@item.Id">
                                <i class="bi bi-pen"></i> Edit
                            </a>
                            <a asp-action="Details" class="btn btn-primary me-2" asp-route-id="@item.Id">
                                <i class="bi bi-ui-checks-grid"></i> Details
                            </a>
                            <a asp-action="Delete" class="btn btn-danger me-2" asp-route-id="@item.Id">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $('table').DataTable({
                // Add DataTable options if needed
            });
        });
    </script>
}
