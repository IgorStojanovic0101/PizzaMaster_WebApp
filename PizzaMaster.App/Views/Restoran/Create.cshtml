@model PizzaMaster.Domain.ViewModels.RestoranViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-4">Create Restoran</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" onsubmit="return ValidateInput()">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RestoranIme" class="control-label">Restaurant Name</label>
                <input asp-for="RestoranIme" class="form-control" />
                <span asp-validation-for="RestoranIme" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateFrom" class="control-label">Start Date</label>
                <input asp-for="DateFrom" class="form-control" type="date" />
                <span asp-validation-for="DateFrom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateTo" class="control-label">End Date</label>
                <input asp-for="DateTo" class="form-control" type="date" />
                <span asp-validation-for="DateTo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Upload Image</label>
                <input type="file" id="uploadBox" class="form-control" />
                <span class="text-danger" id="uploadBoxError"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function ValidateInput() {
            var uploadBox = document.getElementById("uploadBox");
            var uploadBoxError = document.getElementById("uploadBoxError");

            if (uploadBox.value === "") {
                uploadBoxError.innerText = "Please select an image.";
                return false;
            } else {
                uploadBoxError.innerText = "";
                return true;
            }
        }
    </script>
}
