@{
    var isUserLoggedIn = !string.IsNullOrEmpty(ViewContext.HttpContext.Session.GetString("Token"));
}

<ul class="navbar-nav">
    @if (!isUserLoggedIn)
    {
        <!-- User is not logged in -->
        <li class="nav-item">
            <a class="nav-link" id="register" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="login" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
    else
    {
        <!-- User is logged in -->
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-page="/Account/Manage/Index" title="Manage">Hello </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
</ul>

